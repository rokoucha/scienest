{
  "name": "scienest",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "type": "module",
  "dependencies": {
    "@remix-run/cloudflare": "^1.11.1",
    "@remix-run/cloudflare-pages": "^1.11.1",
    "@remix-run/react": "^1.11.1",
    "markdown-to-jsx": "^7.1.8",
    "nanoid": "^4.0.0",
    "nanoid-dictionary": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20221111.1",
    "@remix-run/dev": "^1.11.1",
    "@types/nanoid-dictionary": "^4.2.0",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "better-sqlite3": "^8.0.1",
    "node-gyp": "^9.3.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^4.1.1",
    "typescript": "^4.9.4",
    "wrangler": "^2.8.0"
  },
  "scripts": {
    "build": "remix build",
    "clean": "rimraf functions public/build",
    "dev:remix": "remix watch",
    "dev:wrangler": "NODE_ENV=development NO_D1_WARNING=true wrangler pages dev ./public --compatibility-date=2023-01-14 --ip ::0 --ip 0.0.0.0 --d1 DB --live-reload --persist",
    "dev": "yarn run build && run-p -s \"dev:*\"",
    "migration:create": "wrangler d1 migrations create scienest",
    "migration:local": "yarn run wrangler d1 migrations apply scienest --local",
    "typecheck": "tsc --noEmit",
    "wrangler": "NO_D1_WARNING=true wrangler"
  }
}
