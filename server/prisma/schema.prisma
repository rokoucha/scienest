// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Post {
  id        String   @id @default(cuid())
  content   Content  @relation(fields: [contentId], references: [id])
  contentId String
  createdAt DateTime @default(now())
  slug      String   @unique
  scope     String
  tags      Tag[]
  updatedAt DateTime @updatedAt
}

model Content {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  text      String
  parentId  String?
  parent    Content?  @relation("ContentChain", fields: [parentId], references: [id])
  children  Content[] @relation("ContentChain")
  slugs     Post[]
  scope     String
}

model Tag {
  name  String @id
  posts Post[]
}
