// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model Post {
  content     Content  @relation(fields: [contentId], references: [id])
  contentId   String
  createdAt   DateTime @default(now())
  description String
  id          String   @id @default(cuid())
  scope       String
  slug        String   @unique
  tags        Tag[]
  title       String
  updatedAt   DateTime @updatedAt
}

model Content {
  children  Content[] @relation("ContentChain")
  createdAt DateTime  @default(now())
  id        String    @id @default(cuid())
  parent    Content?  @relation("ContentChain", fields: [parentId], references: [id])
  parentId  String?
  scope     String
  slugs     Post[]
  text      String
}

model Tag {
  name  String @id
  posts Post[]
}
